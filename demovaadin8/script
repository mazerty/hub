---
- include: script-common-upgrade
- include: script-install-postgresql10
- include: script-install-wildfly14

- apt-get -y install maven
- wget {{ "source-url" | lookup }} -O /var/tmp/source.tar.gz
- tar -xf /var/tmp/source.tar.gz -C /usr/local/src
- mvn -f /usr/local/src/{{ project }}-{{ stage }}/pom.xml install

- include: script-install-nginx
- lookup: script-nginx-conf
  path: /etc/nginx/sites-available/reverse-proxy.conf
- ln -sf /etc/nginx/sites-available/reverse-proxy.conf /etc/nginx/sites-enabled/default
