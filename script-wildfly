zebr0-script run script-common-upgrade
zebr0-script run script-install-wildfly

su wildfly -c "/opt/wildfly/bin/add-user.sh admin admin"
zebr0-lookup script-wildfly-conf > /tmp/wildfly.conf
su wildfly -c "/opt/wildfly/bin/jboss-cli.sh -c --file=/tmp/wildfly.conf"

apt -y install maven
wget {{ "source-url" | lookup }} -O /tmp/source.tar.gz
tar -xf /tmp/source.tar.gz -C /tmp
mvn -f /tmp/{{ project }}-{{ stage }}/pom.xml install
