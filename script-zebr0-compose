---
storage_pools:
  - name: {{ project }}-{{ stage }}
    driver: zfs

{% set network_name = "zebr" ~ (project ~ stage) | hash | truncate(10, end="") ~ 0 %}
networks:
  - name: {{ network_name }}
    type: bridge
    config:
      ipv4.address: {{ "lxd-network-cidr" | lookup }}
      ipv4.nat: true
      ipv6.address: none
      dns.mode: dynamic

profiles:
  - name: {{ project }}-{{ stage }}
    devices:
      root:
        type: disk
        path: /
        pool: {{ project }}-{{ stage }}
      eth0:
        type: nic
        nictype: bridged
        parent: {{ network_name }}

containers:
{% for container in "containers" | lookup | json %}
  - name: {{ project }}-{{ stage }}-{{ container }}
    source:
      type: image
      mode: pull
      server: https://cloud-images.ubuntu.com/daily
      protocol: simplestreams
      alias: bionic
    profiles:
      - {{ project }}-{{ stage }}
    config:
      user.user-data: |
        #cloud-config
        ssh_authorized_keys:
          - {{ "cat /home/ubuntu/.ssh/id_rsa.pub" | sh }}
        runcmd:
          - echo "{{ container }}" > /etc/hostname
          - add-apt-repository -y ppa:zebr0/master
          - apt -y install zebr0-script
          - zebr0-init -u {{ url }} -p {{ project }} -s {{ stage }}
          - zebr0-script run script-{{ container }}
        power_state:
          mode: reboot
      boot.autostart: true
{% endfor %}
